PROGRAM teste;

  PROCEDURE Area_Circulo(Raio: real);
  { PROCEDURE para calcular a área de um círculo. }
  var
    Area, Comprimento, PI : real;
  begin
    PI := 3.141519265;
    Area := PI * Raio * Raio;
    Comprimento := 2 * PI * Raio;
    writeln( 'Área = ', Area );
    writeln( 'Comprimento da Circunferencia = ', Comprimento );
  end;
  
VAR Raio: real;
BEGIN
	WRITEln('Raio: ');
  READ(RAIO);
	Area_Circulo(raio);
END.
